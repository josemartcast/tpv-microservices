<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tpv.desktop.ui.fiscal.FiscalClosureController"
            prefWidth="900" prefHeight="550">

  <top>
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 12;">
      <Label text="Fiscal Closure (Cierre de caja)" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
      <Region HBox.hgrow="ALWAYS"/>
      <Button text="Refrescar" onAction="#onRefresh"/>
    </HBox>
  </top>

  <center>
    <VBox spacing="14" style="-fx-padding: 14;">

      <GridPane hgap="14" vgap="12">
        <Label text="Efectivo inicial:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="openingLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Ventas en efectivo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="cashSalesLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Efectivo esperado:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="expectedLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
      </GridPane>

      <Separator/>

      <GridPane hgap="14" vgap="12">
        <Label text="Efectivo contado:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="countedCashField" promptText="â‚¬"/>

        <Label text="Diferencia:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="diffLabel" text="-" />
      </GridPane>

      <Label text="Nota (opcional)"/>
      <TextArea fx:id="noteArea" prefRowCount="3"/>

      <HBox spacing="10">
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Cerrar caja" onAction="#onCloseCash" />
      </HBox>

      <Label fx:id="statusLabel" text="" style="-fx-text-fill: red;"/>

    </VBox>
  </center>

</BorderPane>
